
<div class=container style= center>
  <header>
      <h1 class=text-center>WatchList Creator</h1>
  </header>
  <main>
      <h2 class=text-center>Movie Lists</h2>
    <ul class="list-cards">
      <% @lists.each do |list| %>
        <li style="background-image: url('<%= cl_image_path list.photo.key, height: 300, crop: :fill %>');">
          <%= link_to list.name, list_path(list) %>
        </li>
      <% end %>
      <li class="add-list text-center">
        <%= link_to 'add list', new_list_path %>
      </li>
    </ul>
  </main>

</div>
